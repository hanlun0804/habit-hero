<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accentColor">#FF76C3D0</color>
    <color name="backgroundColor">#FFFFF5C3</color>
    <color name="black">#FF000000</color>
    <color name="buttonColor">#FF4DB5AB</color>
    <color name="highlightColor">#FFFFAC00</color>
    <color name="placeholderColor">#4F5B6C</color>
    <color name="primaryColor">#FF313D4E</color>
    <color name="secondaryColor">#FFC7D3DD</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Habit Hero</string>
    <style name="Base.Theme.HabitHero" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    <style name="EditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/placeholderColor</item>
        <item name="android:backgroundTint">@color/placeholderColor</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/placeholderColor</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textAppearance">@style/SpinnerTextAppearance</item>
    </style>
    <style name="SpinnerTextAppearance" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="Theme.HabitHero" parent="Base.Theme.HabitHero"/>
</resources>