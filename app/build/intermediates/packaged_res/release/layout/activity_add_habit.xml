<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tvHabitTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HABIT HERO"
        android:textColor="@color/primaryColor"
        android:textSize="72sp"
        android:fontFamily="@font/bebas_neue_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHabitExpl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Which habit do you want to add?"
        android:textColor="@color/primaryColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHabitTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEnterHabit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
        app:hintTextColor="@color/placeholderColor"
        style="@style/EditTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHabitExpl">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietEnterHabit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter habit"
            android:textSize="16sp"
            android:textColor="@color/primaryColor"
            style="@style/EditTextStyle"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvCategoryExpl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which category applies to this habit?"
        android:textColor="@color/primaryColor"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilEnterHabit" />

    <Spinner
        android:id="@+id/sCategory"
        android:layout_width="220dp"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryExpl" />


    <TextView
        android:id="@+id/tvFrequencyExpl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How often do you want to do your habit?"
        android:textColor="@color/primaryColor"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sCategory" />

    <Spinner
        android:id="@+id/sFrequency"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFrequencyExpl" />

    <LinearLayout
        android:id="@+id/llTimesDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sFrequency"  >
        <TextView
            android:id="@+id/tvTimesDayExpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many times a day?"
            android:textColor="@color/primaryColor"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <EditText
            android:id="@+id/etnsTimesDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:hint="Enter times a day"
            android:textColorHint="@color/placeholderColor"
            android:textColor="@color/primaryColor"
            style="@style/EditTextStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sFrequency">
        <TextView
            android:id="@+id/tvDaysExpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which days?"
            android:textColor="@color/primaryColor"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="574dp"
            app:columnCount="2"
            app:rowCount="4"
            >
            <CheckBox
                android:id="@+id/cbMon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Monday"
                android:textColor="@color/primaryColor"
                android:theme="@style/MyCheckBox"
                app:layout_columnWeight="1" />
            <CheckBox
                android:id="@+id/cbTue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Tuesday"
                android:textColor="@color/primaryColor"
                android:theme="@style/MyCheckBox"
                app:layout_columnWeight="1" />
            <CheckBox
                android:id="@+id/cbWed"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Wednesday"
                android:textColor="@color/primaryColor"
                android:theme="@style/MyCheckBox"
                app:layout_columnWeight="1" />
            <CheckBox
                android:id="@+id/cbThu"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Thursday"
                android:textColor="@color/primaryColor"
                android:theme="@style/MyCheckBox"
                app:layout_columnWeight="1" />
            <CheckBox
                android:id="@+id/cbFri"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Friday"
                android:textColor="@color/primaryColor"
                android:theme="@style/MyCheckBox"
                app:layout_columnWeight="1" />
            <CheckBox
                android:id="@+id/cbSat"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Saturday"
                android:textColor="@color/primaryColor"
                android:theme="@style/MyCheckBox"
                app:layout_columnWeight="1" />
            <CheckBox
                android:id="@+id/cbSun"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Sunday"
                android:textColor="@color/primaryColor"
                android:theme="@style/MyCheckBox"
                app:layout_columnWeight="1" />
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sFrequency"  >
        <TextView
            android:id="@+id/tvDateExpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On which date every month?"
            android:textColor="@color/primaryColor"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tvWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you choose a date higher than a month includes, it will be shown on the last day of the month"
            android:textColor="@color/primaryColor"
            android:textSize="10sp"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/etnsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:hint="Enter date"
            android:textSize="16sp"
            android:textColorHint="@color/placeholderColor"
            android:textColor="@color/primaryColor"
            style="@style/EditTextStyle"
            />
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:fabCustomSize="80dp"
        android:backgroundTint="@color/buttonColor"
        android:clickable="true"
        app:tint="@color/primaryColor"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        app:elevation="0dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddHabit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:fabCustomSize="80dp"
        android:backgroundTint="@color/buttonColor"
        app:tint="@color/primaryColor"
        android:clickable="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_add_24"
        app:elevation="0dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>