<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvHabitTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HABIT HERO"
        android:textColor="@color/primaryColor"
        android:textSize="72sp"
        android:fontFamily="@font/bebas_neue_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="HABIT HERO"/>

    <TextView
        android:id="@+id/deleteExpl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press the ✕ to delete a habit"
        android:textSize="16sp"
        android:textColor="@color/primaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHabitTitle"
        android:layout_marginBottom="50dp"
        android:contentDescription="Press the ✕ to delete a habit"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:fabCustomSize="80dp"
        android:backgroundTint="@color/buttonColor"
        android:clickable="true"
        app:tint="@color/primaryColor"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        app:elevation="0dp"
        android:contentDescription="Back to homepage button"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvManageItems"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/backgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteExpl"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/manage_item"
        android:contentDescription="Container for all your habits"/>

</androidx.constraintlayout.widget.ConstraintLayout>